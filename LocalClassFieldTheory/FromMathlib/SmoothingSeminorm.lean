  have hs : Bornology.IsBounded (Set.Icc (0 : ‚Ñù) 1) := Metric.isBounded_Icc 0 1
  obtain ‚ü®a, a_in, œÜ, hœÜ_mono, hœÜ_lim‚ü© := tendsto_subseq_of_bounded hs hmu_bdd
