/-The natural map from ‚Ñö to ‚Ñö_[p], seen as a field of characeristic zero, is uniformInducing when
  the rational field is endowed with the `p`-adic uniformity. -/
theorem uniformInducing_cast : letI := ((@padicValued p _))
  UniformInducing (Rat.cast : ‚Ñö ‚Üí ‚Ñö_[p]) := by
  let _ := ((@padicValued p _))
  have hp_one : (1 : ‚Ñù‚â•0) < p := Nat.one_lt_cast.mpr (Nat.Prime.one_lt Fact.out)
  apply UniformInducing.mk'
  simp_rw [@Metric.mem_uniformity_dist ‚Ñö_[p] _ _]
  refine fun S ‚Ü¶ ‚ü®fun hS ‚Ü¶ ?_, ?_‚ü©
  ¬∑ obtain ‚ü®m, ‚ü®-, hM_sub‚ü©‚ü© := (Valued.hasBasis_uniformity ‚Ñö ‚Ñ§‚Çò‚ÇÄ).mem_iff.mp hS
    set M := (withZeroMultIntToNNReal (NNReal_Cast.p_ne_zero p) m.1).1 with hM
    refine ‚ü®{p : ‚Ñö_[p] √ó ‚Ñö_[p] | dist p.1 p.2 < M}, ‚ü®‚ü®M, ‚ü®?_, fun _ ‚Ü¶ ?_ ‚ü©‚ü©, fun x y h ‚Ü¶ ?_‚ü©‚ü©
    ¬∑ exact withZeroMultIntToNNReal_pos _ (isUnit_iff_ne_zero.mp (Units.isUnit m))
    ¬∑ tauto
    ¬∑ apply hM_sub
      simp only [Set.mem_setOf_eq, dist] at h ‚ä¢
      rwa [hM, ‚Üê Padic.coe_sub, padicNormE.eq_padic_norm', padicNorm_eq_val_norm,
        val_eq_coe, coe_lt_coe, @StrictMono.lt_iff_lt _ _ _ _ _
        (withZeroMultIntToNNReal_strictMono hp_one), ‚Üê neg_sub, Valuation.map_neg] at h
  ¬∑ rw [(Valued.hasBasis_uniformity ‚Ñö ‚Ñ§‚Çò‚ÇÄ).mem_iff]
    rintro ‚ü®T, ‚ü®Œµ, ‚ü®hŒµ, H‚ü©‚ü©, h‚ü©
    obtain ‚ü®M, hM‚ü© := Real.exists_lt_of_strictMono (withZeroMultIntToNNReal_strictMono hp_one) hŒµ
    refine ‚ü®M, by trivial, fun q hq ‚Ü¶ ?_‚ü©
    simp only [Set.mem_setOf_eq, dist] at H hq
    have : (‚Üëq.fst, ‚Üëq.snd) ‚àà T := by
      apply H
      rw [‚Üê Padic.coe_sub, padicNormE.eq_padic_norm', padicNorm_eq_val_norm, ‚Üê neg_sub,
        Valuation.map_neg]
      exact (NNReal.coe_lt_coe.mpr
        ((withZeroMultIntToNNReal_strictMono hp_one).lt_iff_lt.mpr hq)).trans hM
    exact h _ _ this

/-The natural map from ‚Ñö to ‚Ñö_[p], seen as a field of characeristic zero, has dense range when
  the rational field is endowed with the `p`-adic uniformity. -/
theorem dense_cast : DenseRange (Rat.cast : ‚Ñö ‚Üí ‚Ñö_[p]) := by
